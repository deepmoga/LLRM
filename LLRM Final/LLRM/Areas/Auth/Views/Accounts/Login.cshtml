    <link rel="shortcut icon" href="assets/img/logo-fav.png">
    <title>Login</title>
    <link rel="stylesheet" type="text/css" href="~/Areas/Auth/assets/lib/perfect-scrollbar/css/perfect-scrollbar.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Areas/Auth/assets/lib/material-design-icons/css/material-design-iconic-font.min.css" />
