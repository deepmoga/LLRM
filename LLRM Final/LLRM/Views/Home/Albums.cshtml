@model IEnumerable<LLRM.Areas.Auth.Models.Album>
@{
    ViewBag.Title = "Albums";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="ulockd-inner-home">
    <div class="container text-center">
        <div class="row">
            <div class="inner-conraimer-details">
                <div class="col-md-12">
                    <h1 class="text-uppercase">Gallery</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="ulockd-team">
    <div class="container">
        
        
        <div class="row ulockd-mrgn1240">
            @foreach (var a in Model)
            {
                <div class="col-xxs-12 col-xs-6 col-sm-6 col-md-3">
                <div class="team-member-two">
                    <div class="ulockd-tm-thumb">
                        <img class="img-responsive img-whp" src="~/UploadedFiles/@a.Image" alt="@a.AlbumName">
                        <div class="team-two-details">
                            <div class="tm-name">
                            @Html.ActionLink(a.AlbumName,"Gallery",new { id=a.albumid})
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
            }
            
        </div>
    </div>
</section>