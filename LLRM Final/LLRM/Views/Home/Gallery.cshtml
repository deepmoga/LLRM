@model IEnumerable<LLRM.Areas.Auth.Models.Gallery>
@{
    ViewBag.Title = "Gallery";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="ulockd-inner-home">
    <div class="container text-center">
        <div class="row">
            <div class="inner-conraimer-details">
                <div class="col-md-12">
                    <h1 class="text-uppercase">Gallery</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<section class="service-two">
    <div class="container">
        
        <div class="row">
            <div class="col-md-12">
                <!-- Masonry Filter -->
                
                <!-- End Masonry Filter -->
                <!-- Masonry Grid -->
                <div id="grid" class="masonry-gallery grid-3 mrgn10 clearfix">
                    @foreach (var g in Model)
                    {
                        <div class="isotope-item creative corporate">
                            <div class="gallery-thumb">
                                <img class="img-responsive img-whp" src="~/UploadedFiles/@g.Thumb" alt="project">
                                <div class="overlayer">
                                    <div class="lbox-caption">
                                        <div class="lbox-details">
                                            <h5>@g.Name</h5>
                                            <ul class="list-inline">
                                                <li>
                                                    <a class="popup-img" href="~/UploadedFiles/@g.Image" title="Gallery Photos"><span class="flaticon-add-square-button"></span></a>
                                                </li>
                                                <li>
                                                    <a class="link-btn" href="#"><span class="flaticon-link-symbol"></span></a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    
                </div>
                <!-- Masonry Gallery Grid Item -->
            </div>
        </div>
    </div>
</section>
